<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Record</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .header {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 36px;
            font-weight: bold;
        }

        table {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th {
            font-family: 'Poppins', sans-serif;
            font-size: 18px;
            font-weight: 600;
            text-transform: uppercase;
        }

        td {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
        }

        .btn-sm {
            font-size: 14px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }

        .btn-add {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

        .btn-add:hover {
            background-color: #45a049;
        }

        .btn-warning {
            color: white;
        }

        .container {
            margin-top: 30px;
        }

        .word-wrap {
            word-wrap: break-word;
            word-break: break-all;
        }
    </style>
</head>

<body>

    <header>
        <div class="header d-flex justify-content-between align-items-center py-3 px-4">
            <h1>Task Manager</h1>
            <a href="/add" class="btn btn-add btn-lg">Add Task</a>
        </div>
    </header>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 40%;">Task</th>
                        <th style="width: 20%;">Status</th>
                        <th style="width: 20%;">Deadline</th>
                        <th style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% record.map((val)=> { %>
                        <tr>
                            <td style="width: 40%;" class="word-wrap">
                                <%= val.task %>
                            </td>
                            <td style="width: 20%;" class="word-wrap">
                                <%= val.status %>
                            </td>
                            <td style="width: 20%;" class="word-wrap">
                                <%= val.deadline %>
                            </td>
                            <td style="width: 20%;">
                                <a href="/editrecord?id=<%= val.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/deleterecord?id=<%= val.id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>