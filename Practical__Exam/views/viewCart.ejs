<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f4f4;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background: rgb(2, 31, 59);
            color: white;
        }

        .nav a,
        .right a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            font-size: 16px;
        }

        .right .button {
            background: #d71125;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            transition: 0.2s;
        }

        .right .button:hover {
            background: #970615;
        }

        .container {
            max-width: 1100px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table th,
        table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background: #2a4376;
            color: white;
        }

        .add-cart-btn {
            background-color: #E1AD01;
        }

        .back-to-product {
            display: block;
            width: fit-content;
            margin: 20px auto;
            padding: 10px 20px;
            background: #0a6620;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.2s;
        }

        .back-to-product:hover {
            background: #16b43b;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="text-center">Your Cart</h2>

        <% if (!cart || cart.length===0) { %>
            <p class="text-center">Your cart is empty.</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>SrNo</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cart.map((items, i)=> { %>
                            <tr>
                                <td>
                                    <%= ++i %>
                                </td>
                                <td>
                                    <%= items.name %>
                                </td>
                                <td><%= items.price %>
                                </td>
                                <td>
                                    <input type="number" class="quantity form-control" data-price="<%= items.price %>" data-id="<%= items.id %>" value="1" min="1">
                                </td>
                                
                                <td>
                                    <%= items.description %>
                                </td>
                                <td><img src="<%= items.image %>" alt="Product Image" width="80" height="80"></td>
                                <td>
                                    <a href="/cart/deletecart?delId=<%= items?._id %>" class="delete-btn">Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

                <h4 class="text-end">
                    Total Price: â‚¹<span id="totalPrice"><%= totalPrice %></span>
                </h4>
                
                <% } %>

                    <a href="/viewproductpage" class="back-to-product">Back to Products</a>
    </div>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const quantityInputs = document.querySelectorAll(".quantity");
        const totalPriceElement = document.getElementById("totalPrice");

        function updateTotalPrice() {
            let newTotal = 0;
            quantityInputs.forEach(input => {
                let price = parseFloat(input.dataset.price);
                let quantity = parseInt(input.value);
                newTotal += price * quantity;
            });
            totalPriceElement.innerText = newTotal.toFixed(2); // Update total price
        }

        quantityInputs.forEach(input => {
            input.addEventListener("change", function () {
                if (this.value < 1) {
                    this.value = 1; // Prevent quantity from being less than 1
                }
                updateTotalPrice();
            });
        });

        updateTotalPrice(); // Initial calculation
    });
</script>


</html>