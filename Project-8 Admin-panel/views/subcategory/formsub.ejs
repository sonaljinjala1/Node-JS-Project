<%- include('../header') %>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card" style="font-family: 'Courier New', Courier, monospace;">
                        <div class="card-body">
                            <div class="title-box d-flex justify-content-between align-items-center pb-4">
                            <h2 class="card-title mb-0" style="font-size: 30px; ">Add SubCategory</h2>
                            <div class="btn p-0">
                                <a href="/tablesub" class="btn btn-primary">View SubCategory</a>
                            </div>
                        </div>
                            <form class="forms-sample" method="post" action="/Addsubcategory">
                                <div class="form-group">
                                    <select name="category" class="form-control">
                                        <option>---Select Category---</option>
                                        <% category.map((cat)=>{ %>
                                            <option value="<%= cat.id %>">
                                                <%= cat.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="subcategory" class="form-control"
                                        placeholder="Enter Subcategory">
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                <button class="btn btn-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>

    <%- include('../footer') %>