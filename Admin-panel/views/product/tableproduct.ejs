<%- include('../header') %>
    



    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card" style="font-family: 'Courier New', Courier, monospace;">
                        <div class="card-body">
                            <div class="title-box d-flex justify-content-between align-items-center pb-4">
                                <h2 class="card-title mb-0" style="font-size: 30px;">View Product Category</h2>
                                <div class="btn p-0">
                                    <a href="/formproduct" class="btn btn-primary">Add Product Category</a>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <div class="container">
                                    <div class="row">
                                        <% record.map((product, i)=> { i = i + 1 %>

                                            <div class="box d-flex p-3 mb-4" style="border: 2px solid black;background-color: #f7f3f3;">

                                                <div class="col-md-4 mb-3">
                                                    <div class="img" style="width: 100%; height: 100%;  object-fit: cover;">
                                                        <img src="<%= product.image %>" alt="Product Image" class="img-fluid w-100 h-100" style="object-fit: cover;">
                                                    </div>
                                                </div>
                                                

                                                <div class="col-md-6">
                                                    <div class="body-text">
                                                        <h6 class="card-title">
                                                            <%= product.title %>
                                                        </h6>
                                                        <p class="card-text">
                                                            <%= product.categoryId.category %>
                                                        </p>
                                                        <p class="card-text">
                                                            <%= product.subcategoryId.subcategory %>
                                                        </p>
                                                        <p class="card-text">
                                                            <%= product.excategoryId.excategory %>
                                                        </p>
                                                        <p class="card-text">Rs <%= product.price %>
                                                        </p>
                                                        <p class="card-text">Quantity: <%= product.qty %>
                                                        </p>
                                                        <p class="card-text">
                                                            <%= product.description %>
                                                        </p>
                                                    </div>
                                                </div>

                                                <div class="col-md-2">
                                                    <div class="btn-wrapper">
                                                        <div>
                                                            <% if(product.categoryId.status===1) { %>
                                                                <a href="/categoryInstock?id=<%= product.categoryId.id %>" 
                                                                   class="btn btn-success mb-4 fixed-size-btn w-100" >
                                                                   Instock
                                                                </a>
                                                            <% } else { %>
                                                                <a href="/categoryOutstock?id=<%= product.categoryId.id %>" 
                                                                   class="btn btn-warning mb-4 fixed-size-btn w-100">
                                                                   Outstock
                                                                </a>
                                                            <% } %>
                                                        </div>
                                                        <div>
                                                            <a href="/editpeoductRecord?editId=<%= product.id %>" 
                                                               class="btn btn-primary mb-4 fixed-size-btn w-100">Edit
                                                            </a>
                                                        </div>
                                                        <div>
                                                            <a href="/deleteproductrecord?delid=<%= product.id %>" 
                                                               class="btn btn-danger mb-4 fixed-size-btn w-100">
                                                             Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                

                                            </div>

                                            <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->

    </div>

    <%- include('../footer') %>




        <!--  -->