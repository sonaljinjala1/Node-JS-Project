<%- include('../header') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card" style="font-family: 'Courier New', Courier, monospace;">
                        <div class="card-body">
                            <div class="title-box d-flex justify-content-between align-items-center pb-4">
                                <h2 class="card-title mb-0" style="font-size: 30px;">View SubCategory</h2>
                                <div class="btn p-0">
                                    <a href="/formsub" class="btn btn-primary">Add SubCategory</a>
                                </div>
                            </div>
                            <div class="table-responsive pt-3">
                                <table class="table table-bordered text-center">
                                    <thead>
                                        <tr>
                                            <th style="width: 10%; font-weight: bold;" >
                                                Srn
                                            </th>
                                            <th style="width: 30%; font-weight: bold;">
                                                Category
                                            </th>
                                            <th style="width: 30%; font-weight: bold;">
                                                Subcategory
                                            </th>
                                            <th style="width: 10%; font-weight: bold;">
                                                Status
                                            </th>
                                            <th style="width: 12%; font-weight: bold;">
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% subcategory.map((subcate,i)=>{i=i+1 %>
                                            <tr>
                                                <td>
                                                    <%= i %>
                                                </td>
                                                <td>
                                                    <%= subcate.categoryId.category %>
                                                </td>
                                                <td>
                                                    <%= subcate.subcategory %>
                                                </td>
                                                <td>
                                                    <% if(subcate.categoryId.status===1) { %>
                                                        <a href="/categoryInstock?id=<%= subcate.categoryId.id %>"
                                                            class="btn btn-success btn-sm" style="width: 100%;">Instock</a>
                                                        <% } else { %>
                                                            <a href="/categoryOutstock?id=<%= subcate.categoryId.id %>"
                                                                class="btn btn-warning btn-sm" style="width: 100%;">Outstock</a>
                                                            <% } %>
                                                </td>
                                                <td>

                                                    <a href="/editsubRecord?editId=<%= subcate.id %>"
                                                        class="btn btn-primary"><i
                                                            class="fa-solid fa-edit fs-6"></i></a>
                                                    <a href="/deletesubrecord?delid=<%= subcate.id %>"
                                                        class="btn btn-danger"><i
                                                            class="fa-solid fa-trash fs-6"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>

    <%- include('../footer') %>