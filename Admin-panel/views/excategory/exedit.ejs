<%- include('../header') %>

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card"  style="font-family: 'Courier New', Courier, monospace;">
                        <div class="card-body">
                            <div class="title-box d-flex justify-content-between align-items-center pb-4">
                                <h2 class="card-title mb-0" style="font-size: 30px; ">Update Extra Category</h2>
                                <div class="btn p-0">
                                    <a href="/extable" class="btn btn-primary">View Extra Category</a>
                                </div>
                            </div>
                            <form class="forms-sample" method="post" action="/updateExcategory">
                                <input type="hidden" value="<%= single.id %>" name="editid">
                                <div class="form-group">
                                    <select name="category" class="form-control">
                                        <option>---Select Category---</option>
                                        <% category.map((cat)=>{ %>
                                            <option <% if(cat.category==single.categoryId.category){%> selected
                                                <%}%> value="<%= cat.id %>">
                                                        <%= cat.category %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select name="subcategory" class="form-control">
                                        <option>---Select subategory---</option>
                                        <% subcategory.map((sub)=>{ %>
                                            <option <% if(sub.subcategory==single.subcategoryId.subcategory) {%>
                                                selected
                                                <% } %> value="<%= sub.id %>">
                                                        <%= sub.subcategory %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" value="<%= single.excategory %>" name="excategory"
                                        class="form-control" placeholder="Enter Exsubcategory">
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                <button class="btn btn-light">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>

    <%- include('../footer')%>